{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": false,
  "execMap": {
    "js": "babel-node ./scripts/updateSchema.js"
  },
  "events": {
    "restart":
      "echo '> schema changed, compiling...'"
  },
  "watch": ["src/schema"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js"
}
